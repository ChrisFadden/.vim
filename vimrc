set autoindent

set nostartofline

set visualbell

set cmdheight=2

set number

set shiftwidth=2
set softtabstop=2
set expandtab

set laststatus=2

set nobackup
set noswapfile

set t_Co=256

colorscheme anotherdark

let g:cpp_class_scope_highlight = 1
let g:cpp_experimental_template_highlight = 1




